<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/errorIssueLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="visible"
    tools:visibility="visible">

    <TextView
        android:id="@+id/textErrorIssue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="@string/text_error_issues"
        android:textColor="@color/red"
        android:textSize="18sp" />

    <Button
        android:id="@+id/buttonTryAgain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="@color/grey_darken_4"
        android:padding="8dp"
        android:text="@string/try_again"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/buttonMoreDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="@color/grey_darken_3"
        android:padding="8dp"
        android:text="@string/more_details"
        android:textColor="@color/white" />

</LinearLayout>